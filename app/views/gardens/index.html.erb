<div class="container-i">
  <div class="list-title">
    <% if params[:query] %>
      <h1><strong>Gardens at <%= params[:query] %><strong></h1>
    <% else %>
      <h1>Our Gardens</h1>
    <% end %>
  </div>
  <div class="list-subtitle">
    <p><%= @gardens.count %> results in this list</p>
  </div>
  <div class="cards-i">
    <% @gardens.each do |garden| %>
      <div class="card-i" style="background-image: url(https://source.unsplash.com/collection/560886)">
       <h2><%= link_to garden.name, garden_path(garden) %></h2>
       <p><%= garden.description %></p>
      </div>
    <% end %>
  </div>
  <div class="garden-button">
    <%= link_to new_garden_path, class: "btn btn-primary" do %>
      Add a new garden
    <% end %>
  </div>
  <div id="map"
     style="width: 40%; height: 300px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
